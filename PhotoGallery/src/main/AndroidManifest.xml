<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="cn.easyar.photogallery">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".photo.MediaChoseActivity"
            android:label="@string/title_activity_media_chose" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".photo.CropImageActivity"
            android:label="@string/title_activity_crop_image" >
        </activity>
        <activity android:name=".ucrop.UCropActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name=".photo.VideoChoseActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

    </application>

</manifest>
